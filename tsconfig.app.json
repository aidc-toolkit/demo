{
  "extends": "@aidc-toolkit/dev/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2022", "DOM", "DOM.Iterable"],

    // Bundler support.
    "module": "es2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx"
  }
}
